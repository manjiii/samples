<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manjiii.samples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MaterialDesignBaseActivity"
            android:label="@string/title_activity_material_design_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransitionActivity"
            android:label="@string/title_activity_transition"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransitionSlideActivity"
            android:label="@string/title_activity_transition_slide"
            android:theme="@style/AppTheme.Base.Slide" />
        <activity
            android:name=".TransitionExplodeActivity"
            android:label="@string/title_activity_transition_explode"
            android:theme="@style/AppTheme.Base.Explode" />
        <activity
            android:name=".TransitionFadeActivity"
            android:label="@string/title_activity_transition_fade"
            android:theme="@style/AppTheme.Base.Fade" />
        <activity
            android:name=".TransitionSharedElementActivity"
            android:label="@string/title_activity_transition_shared_element"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransitionSharedElementMultipleActivity"
            android:label="@string/title_activity_transition_shared_element_multiple"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>